@{
    ViewBag.Title = "Home";
}
<div id="myCarousel" class="carousel slide" data-ride="carousel" style="width:800px;height:200px;margin-left:150px">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/Images/1.png" alt="Image1" style="height:200px">
            <div class="carousel-caption" style="color:#b81e0d;">Book your ride with DriveMe!</div>
        </div>

        <div class="item">
            <img src="~/Images/2.jpg" alt="Image2"  style="height:200px">
            <div class="carousel-caption"style="color:#b81e0d;">Booking any time any where!</div>
        </div>

        <div class="item">
            <img src="~/Images/3.png" alt="Image3"  style="height:200px">
            <div class="carousel-caption" style="color:#b81e0d;">Booking made easy!</div>
            </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<h3>Book a car for your ride. Its easy !</h3>&nbsp;<h4>For bookings @Html.ActionLink("Click here", "new", "rides")</h4>